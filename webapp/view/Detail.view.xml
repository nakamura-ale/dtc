<mvc:View
    controllerName="project11.controller.Detail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:t="sap.ui.table">
    
    <Page title="Detalhes do Lote" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <t:Table
                id="tblDetail"
                rows="{detail>/items}"
                selectionMode="None" 
                enableColumnReordering="true"
                class="sapUiSizeCompact">
                
                <t:columns>
                    <t:Column label="{i18n>ZTPINT}" width="100px">
                        <t:template>
                            <Text text="{detail>ZTPINT}" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{i18n>ZBATCH}" width="150px">
                        <t:template>
                            <Text text="{detail>ZBATCH}" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{i18n>ZPARAMETRO}" width="200px">
                        <t:template>
                            <Text text="{detail>ZPARAMETRO}" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{i18n>ZFIELD}" width="200px">
                        <t:template>
                            <Text text="{detail>ZFIELD}" />
                        </t:template>
                    </t:Column>
                    <t:Column label="{i18n>ZVALOR}" width="200px">
                        <t:template>
                            <Text text="{detail>ZVALOR}" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </content>
    </Page>
</mvc:View>

